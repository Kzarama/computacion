		System.out.println("se va a iniciar las pruebas");
	}
	
	@BeforeEach
	void CreateOrders() {
		Order orden = new Order();
		orden.setDescription("0");
		orden.setSecurityCode("0");
		orden.setOrderDate(new Date(2020, 2, 6));
		orden.setOrderStatus("0");
		orden.setOrderId(0);
		orderService.createOrder(orden);
		assertAll("grupo1", () -> assertNotNull(orderService.getOrder(0)),() -> assertNotNull(orderService.getOrderDescription(0)), () -> assertNotNull(orderService.getOrder(0).getSecurityCode()));
	}
	
	@Test
	void getOrderDescription() {
		assertTrue(true);
		assertTrue(orderService.getOrderDescription(0).startsWith("Description"));
	}
	
	@Test
	void getOrderStringCode() {
		assertTrue(orderService.getOrderStringCode(0).startsWith("Account Code:"));
	}
	
